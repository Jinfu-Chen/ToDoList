<!-- tab栏 -->
<van-tabs active="{{ active }}" bind:change="onChange">
  <van-tab title="全部"></van-tab>
  <van-tab title="未完成"></van-tab>
  <van-tab title="已完成"></van-tab>
</van-tabs>
<!-- 添加任务框 -->
<van-action-sheet show="{{show}}" bind:close="onClose" title="添加任务">
  <van-cell-group>
    <van-field model:value="{{ title }}" label="任务标题" placeholder="请输入任务标题" border="{{ false }}" />
    <van-field model:value="{{ remarks }}" label="任务备注" placeholder="请输入任务备注" border="{{ false }}" />
    <view style="height: 300rpx;"></view>
    <view class="addConfirm">
      <van-button type="primary" bind:click="addConfirm">确认</van-button>
    </view>
  </van-cell-group>
</van-action-sheet>
<!-- 任务信息列表 -->
<view wx:for="{{showList}}" wx:key="id" class="taskWhole">
  <view style="display: flex;">
    <view style="text-align: center; width: 90%; font-size: 34rpx;">任务{{item.id}}</view>
    <van-icon name="cross" size="40rpx" id="{{item.id}}" bind:click="deleteTask" />
  </view>
  <view style="display: flex; align-items: center;">
    <view style="width: 85%; padding-right: 20rpx;">
      <view>标题：<text style="font-weight: 700;">{{item.title}}</text></view>
      <view>备注：{{item.remarks}}</view>
      <view style="font-size: 28rpx; font-weight: 300;">创建时间：{{item.creatTime}}</view>
      <view style="font-size: 28rpx; font-weight: 300">完成时间：{{item.finishTime}}</view>
    </view>
    <van-checkbox value="{{ item.finished }}" icon-size="70rpx" shape="square" bind:change="changeStatus" id="{{item.id}}"></van-checkbox>
  </view>
</view>
<!-- 占位，防止拉不到底 -->
<view style="height: 200rpx;"></view>
<!-- <view>{{item.title}}</view>
  <view>{{item.remarks}}</view>
  <view>创建时间：{{item.creatTime}}</view> -->
<view class="addTask">
  <view>未完成：{{unfinishedCount}}</view>
  <van-button icon="plus" bind:click="addTask" type="default" color="greenyellow" size="normal" />
  <view>已完成：{{finishedCount}}</view>
</view>